<div id="addContentContainer">
	<div class="metadata">
		<form class="reviewForm" id="reviewForm-{reviewFormId}" onsubmit='return false'>
			<h2>Title: {title}</h2>
			<h3>Date: {date}</h3>
			<h3>Uploader: {learner}</h3>
			<div class="video" id="player-{reviewFormId}">	
			</div>

			<input type="hidden" name="review-asset_id" id="review-asset_id" value="{asset_id}" />
			<table>
				<tr>
					<td colspan="2">
						<div class="vidControls">
							<div class="control">
								<a class="playButton" href="#" onclick="InStep.players['mpl_{reviewFormId}'].sendEvent('PLAY'); return false;"><img src="{include-url}presentation/images/player/play.png" alt="Play" /></a>
								<span>Play</span>
							</div>
							<div class="control">
								<a class="rewindButton" href="#" onclick="InStep.players['mpl_{reviewFormId}'].sendEvent('SEEK', 0); return false;"><img src="{include-url}presentation/images/player/rewind.png" alt="Rewind" /></a>
								<span>Rewind</span>
							</div>
							<div class="control">				
								<a class="pauseButton" href="#" onclick="InStep.players['mpl_{reviewFormId}'].sendEvent('PLAY'); return false;"><img src="{include-url}presentation/images/player/pause.png" alt="Pause" /></a>
								<span>Pause</span>
							</div>
							<div class="control">
								<a class="stopButton" href="#" onclick="InStep.players['mpl_{reviewFormId}'].sendEvent('STOP'); return false;"><img src="{include-url}presentation/images/player/stop.png" alt="Stop" /></a>
								<span>Stop</span>
							</div>
							<div class="control">
								<a class="volumeUpButton" href="#" onclick="InStep.players['mpl_{reviewFormId}'].sendEvent('VOLUME', mpl_{reviewFormId}_volume + 10); return false;"><img src="{include-url}presentation/images/player/plus.png" alt="Increase Volume" /></a>
								<span>Volume Up</span>
							</div>
							<div class="control">
								<a class="volumeDownButton" href="#" onclick="InStep.players['mpl_{reviewFormId}'].sendEvent('VOLUME', mpl_{reviewFormId}_volume - 10); return false;"><img src="{include-url}presentation/images/player/minus.png" alt="Decrease Volume" /></a>	
								<span>Volume Down</span>
							</div>
						</div>					
					</td>
				</tr>
				<tr>
					<td>Activity</td>
					<td><input type="text" name="activity" class='review-activity' size="55" value='{activity}'/></td>
				</tr>
				<tr>
					<td>Date of Activity</td>
					<td><input type="text" name="review-date" id="review-date" class='datePicker' size="55" value='{date}'/><br />(format is dd-mm-yyyy)</td>
				</tr>
				<tr>
					<td>Domain</td>
					<td>
						<div class="domains">
							<a href="#" onclick="return false" class="notice levelTip selected">Notice</a>
							<a href="#" onclick="return false" class="respond{selectRespond}">Respond</a>
							<a href="#" onclick="return false" class="engage{selectEngage}">Engage</a>
							<a href="#" onclick="return false" class="cando{selectCando}">Can do</a>
							<a href="#" onclick="return false" class="improve{selectImprove}">Improve</a>
							<a href="#" onclick="return false" class="skilled{selectSkilled}">Skilled</a>
							<input type="hidden" id="domainLevel" name="domainLevel" value="{domainLevel}" />
							<br style="clear:both" />
						</div>
					</td>
				</tr>
				<tr>
					<td>Level</td>
					<td>
						<div class="levelBar center">
							<a href="#" onclick="return false" id="level1" class="selected">1</a>
							<a href="#" onclick="return false" id="level2" class="{levelBar2}">2</a>
							<a href="#" onclick="return false" id="level3" class="{levelBar3}">3</a>
							<input type="hidden" id="level" name="level" value="{barLevel}" />
						</div>
					</td>
				</tr>
				<tr>
					<td>Level Description</td>
					<td id="descHolder">
						<div id="levelInfoContainer">
							<div id="levelDescriptionHolder" class="center">
								<img src='{include-url}presentation/images/folder-stand.png' alt='category' /> <span id="domainName" class='boldText'>{domainName}</span><br />
								<p id="levelName">{levelName}</p>
							</div>
						</div>
					</td>
				</tr>
				<tr>
					<td>Tags</td>
					<td>
						<div id="tagContainer"></div>
						
						<div id="addNewTags">
							<input type="text" name="newTag" id="newTag" placeholder="Add a new tag..." size="15" />
							<a href="#"><img src="{include-url}presentation/images/add-tag.png" alt="Add a new tag" /></a>
						</div>
					</td>
				</tr>
				<tr>
					<td>Notes</td>
					<td>{notes}<br />
					<textarea rows="10" cols="50" placeholder="Enter notes here..." name="review-notes" id='review-notes'></textarea></td>
				</tr>
				<tr>
					<td colspan="2"><button id='review-add'>Add Review</button></td>
				</tr>
			</table>
		</form>
	</div>
</div>
<script type='text/javascript'>
	var so{reviewFormId} = new SWFObject('{include-url}/presentation/flash/player.swf','mpl_{reviewFormId}','400','200','9');
	so{reviewFormId}.addParam('allowfullscreen','true');
	so{reviewFormId}.addParam('allowscriptaccess','always');
	so{reviewFormId}.addParam('wmode','opaque');
	so{reviewFormId}.addVariable('file','{href}');
	so{reviewFormId}.addVariable('image', '{thumbnail}');
	so{reviewFormId}.write('player-{reviewFormId}');
			
	var mpl_{reviewFormId}_volume = 80;
</script>
